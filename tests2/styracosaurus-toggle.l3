//Toggle the i-th bit of a value (i is counted from the right).
//Return x if i is not between 0 and 31
int toggle(int x, int i)
{
    int mask;
    int bit;
    if (i < 0 || i > 31)
        return x;
    
	mask = 1 << i;
	
	//Get the bit
    bit = x & mask;
    
    //Clear the bit
    x = x & ~mask;
    
    //Toggle the bit
    bit = (~bit) & mask;
    x = x | bit;
    
    return x;
}

int main()
{
    int x = toggle(0x10, 3);
	if(x == 0x18)
		return 0;
	else
		return -1;
}
