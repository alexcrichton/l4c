//Approximate pi using taylor series expansion

int approx(int depth)
{
	int pi = tofloat(0);
	int four = tofloat(4);
	int i;

	bool is_even = false;
	for(i=1; i<depth; i+=2)
	{
		int term;
		if(is_even)
		{
			term = fdiv(four, tofloat(-i));
		}
		else
		{
			term = fdiv(four, tofloat(i));
		}

		is_even = !is_even;
		pi = fadd(pi, term);
	}
	
	return pi;
}

int main()
{
	int pi = approx(1000000);
	int nl = 10;

	printfloat(pi);
	printchar(nl);

	return pi;
}
