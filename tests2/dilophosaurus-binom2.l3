int fact(int n){
	if(n < 2) return 1;
	return n * fact(n-1);
}

// number of permutations
int P(int n, int k){
	return fact(n) / fact(n-k);
}

// binomial coefficient
int C(int n, int k){
	return P(n, k) / fact(k);
}

int powerOf2(int n){
	return 1 << n;
}

