//test exception
// creates a pascal's triangle

int pascal(int row, int col)
{
    if (col == 0 || col == row)
        return 1;
    if (col < 0 || col > row || row < 0)
        return 0;
    return pascal(row-1, col - 1) + pascal(row - 1, col);
}

int main()
{
    int levels = 0x6EADBABE;

    for (int i = 0; i <= levels; i++) {
        for (int j = 0; j <= i; j++) {
            int num = pascal(i, j);
            printint(num);
            if (j < i)
                printchar(0x20);
        }
        printchar(0x0a);
    }

    return 0;
}
