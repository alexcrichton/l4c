int bar(int x); // foo declares itself so no prototype needed

// returns 1 if x is even, 0 otherwise
int foo(int x) {
  if (x==0) return 1;
  return bar(x-1);
}

// returns 1 if x odd, 0 otherwise
int bar(int x) {
  if (x==0) return 0;
  return foo(x-1);
}

int main() {
  return foo(3);
}
