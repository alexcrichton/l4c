// computing the sum of the first five perfect numbers
int main()
{
    int nfound = 0;
    int p = 2;
    int sum = 0;

    while (nfound < 5)
    {
        int first = 1 << (p - 1);
        int second = (1 << p) - 1;
        // check second is prime
        int i;
        for (i = 2; i < second; i++)
        {
            if (second % i == 0)
                break;
        }
        if (i == second)
        {
            sum += first * second;
            nfound++;
        }
        p += 1;
    }

    return sum;
}
